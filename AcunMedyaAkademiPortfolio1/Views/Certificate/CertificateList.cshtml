@model List<AcunMedyaAkademiPortfolio1.Models.TblCertificate>

@{
    ViewBag.Title = "CertificateList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sertifika Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Sertifika ID</th>
        <th>Sertifika Başlığı</th>
        <th>Sertifika Görseli</th>
        <th>Sertifika No</th>
        <th>Sertifika Teslim Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CertificateID</td>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:400px;height:150px" /></td>
            <td>@item.CertificateNo</td>
            <td>@item.SendDate</td>
            <td><a href="/Certificate/DeleteCertificate/@item.CertificateID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Certificate/UpdateCertificate/@item.CertificateID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Certificate/CreateCertificate/" class="btn btn-primary">Yeni Sertifika Girişi</a>

