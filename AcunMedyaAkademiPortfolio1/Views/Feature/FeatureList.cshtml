@model List<AcunMedyaAkademiPortfolio1.Models.TblFeature>

@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öne Çıkarılanlar Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Öne Çıkarılanlar ID</th>
        <th>Öne Çıkarılanlar İsim/Soyisim</th>
        <th>Öne Çıkarılanlar Açıklaması</th>
        <th>Öne Çıkarılanlar Proje İsmi</th>
        <th>Öne Çıkarılanlar Görseli</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureID</td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.ProjectName</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:400px;height:150px" /></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkarılanlar Girişi</a>
