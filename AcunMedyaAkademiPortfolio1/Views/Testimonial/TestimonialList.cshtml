@model List<AcunMedyaAkademiPortfolio1.Models.TblTestimonial>

@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Referans ID</th>
        <th>Referans Başlığı</th>
        <th>Referans Açıklaması</th>
        <th>Referans İsmi/Soyismi</th>
        <th>Referans Görseli</th>
        <th>Referans Mesleği</th>
        <th>Referans Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.NameSurname</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:400px;height:150px" /></td>
            <td>@item.Job</td>
            <td>@item.Status</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans Girişi</a>

